<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="2dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/GambarProduk"
        android:layout_width="100dp"
        android:scaleType="fitXY"
        android:background="#0000FF"
        android:contentDescription="@string/app_name"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/NamaProduk2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/GambarProduk"
        android:layout_toEndOf="@+id/GambarProduk"
        android:text="Nama Produk"
        android:padding="5dp"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/StokProduk2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/GambarProduk"
        android:layout_toEndOf="@+id/GambarProduk"
        android:text="Stok Produk"
        android:padding="5dp"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/HargaProduk2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_toRightOf="@+id/GambarProduk"
        android:layout_toEndOf="@+id/GambarProduk"
        android:text="Harga Produk"
        android:padding="5dp"
        android:textColor="#000000"
        android:textSize="18sp" />
</RelativeLayout>