<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_container"
    android:layout_width="match_parent"
    android:layout_height="95dp">

    <LinearLayout
        android:id="@+id/layoutName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:gravity="top"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/KodeTransaksiLayanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:text="Kode Transaksi Layanan"
            android:textColor="@android:color/black"
            android:textSize="19sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignStart="@+id/layoutName"
        android:layout_alignLeft="@+id/layoutName"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="3dp"
        android:background="#d4d4d4" />

    <LinearLayout
        android:id="@+id/LayoutType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutName"
        android:layout_alignStart="@+id/layoutName"
        android:layout_alignLeft="@+id/layoutName"
        android:layout_marginTop="5dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="top"
        android:orientation="horizontal"
        android:textSize="15sp"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nama Hewan :"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nama Layanan :"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutType2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutName"
        android:layout_alignStart="@+id/layoutName"
        android:layout_alignLeft="@+id/layoutName"
        android:layout_marginTop="25dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="top"
        android:orientation="horizontal"
        android:textSize="15sp"
        android:weightSum="2">

        <TextView
            android:id="@+id/IdHewanJoinTransLyn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nama Hewan"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/IdLayananJoinTransLyn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nama Layanan"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>